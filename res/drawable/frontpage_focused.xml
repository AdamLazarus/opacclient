<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
			<solid android:color="#ee0000" />
			<stroke android:width="2dp" android:color="#ee0000" />
		</shape>
    </item>

    <item android:state_focused="true" >
        <shape>
			<solid android:color="#ee0000" />
			<stroke android:width="2dp" android:color="#ee0000" />
        </shape>
    </item>

    <item>       
        <shape>
			<solid android:color="#b90000" />
			<stroke android:width="2dp" android:color="#b90000" />
		</shape>
    </item>
</selector>